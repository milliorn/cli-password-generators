{
   "compilerOptions": {
      "target": "es6",
      "module": "es2015",
      "moduleResolution": "node",
      "declaration": false,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "pretty": true,
      "allowUnreachableCode": true,
      "allowUnusedLabels": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noImplicitUseStrict": false,
      "outDir": "dist/",
      "baseUrl": "src/",
      "listFiles": false,
      "noEmitHelpers": true,
      "esModuleInterop": true
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ],
   "compileOnSave": false
}